<Window x:Class="StarTravelDispatcherApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Логин" />
        <TextBox x:Name="UsernameBox" Margin="0 0 0 10"/>

        <TextBlock Text="Пароль" />
        <PasswordBox x:Name="PasswordBox" Margin="0 0 0 10"/>

        <Button Content="Войти" Click="Login_Click" Width="100"/>
    </StackPanel>
</Window>

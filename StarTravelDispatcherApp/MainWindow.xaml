<Window x:Class="StarTravelDispatcherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Star Travel Dispatcher" Height="600" Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <!-- Меню -->
            <ColumnDefinition Width="*"/>
            <!-- Список полетов -->
            <ColumnDefinition Width="300"/>
            <!-- Правая панель -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <!-- Список пассажиров -->
        </Grid.RowDefinitions>

        <!-- Команды -->
        <StackPanel Grid.Column="0" Margin="10">
            <Button Content="Добавить полет" Click="AddFlight_Click"/>
            <Button Content="Удалить полет" Click="DeleteFlight_Click"/>
            <Button Content="Звездная карта" Click="StarMap_Click"/>
            <Button Content="Записать на полет" Click="AssignToFlight_Click"/>
            <Button Content="Удалить с полета" Click="RemoveFromFlight_Click"/>
        </StackPanel>

        <!-- Список полетов -->
        <ListView x:Name="FlightsList"
                  Grid.Column="1"
                  Margin="10"
                  SelectionChanged="FlightsList_SelectionChanged">
            <!-- шаблон отображения полета -->
        </ListView>

        <!-- Правая панель -->
        <ContentControl x:Name="RightPanel"
                        Grid.Column="2"
                        Margin="10"/>

        <!-- Список пассажиров -->
        <ListView x:Name="PassengersList"
                  Grid.Column="0"
                  Grid.ColumnSpan="3"
                  Grid.Row="1"
                  Margin="10"/>
    </Grid>
</Window>

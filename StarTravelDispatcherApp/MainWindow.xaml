<Window x:Class="StarTravelDispatcherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Star Travel Dispatcher" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Список полетов и правая панель -->
            <RowDefinition Height="Auto"/>
            <!-- Поисковая строка -->
            <RowDefinition Height="*"/>
            <!-- Список пассажиров -->
        </Grid.RowDefinitions>

        <!-- Команды -->
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="10">
            <Button Content="Добавить полет" Click="AddFlight_Click"/>
            <Button Content="Удалить полет" Click="DeleteFlight_Click"/>
            <Button Content="Звездная карта" Click="StarMap_Click"/>
            <Button Content="Записать на полет" Click="AssignToFlight_Click"/>
            <Button Content="Удалить с полета" Click="RemoveFromFlight_Click"/>
            <Button Content="Добавить пассажира" Click="AddPassenger_Click"/>
            <Button Content="Удалить пассажира" Click="DeletePassenger_Click"/>
            <Button Content="Обновить рейсы" Click="RefreshFlights_Click"/>
        </StackPanel>

        <!-- Список полетов -->
        <ListView x:Name="FlightsList"
                  Grid.Column="1"
                  Grid.Row="0"
                  Margin="10"
                  SelectionChanged="FlightsList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="40" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Ship" Width="100" DisplayMemberBinding="{Binding ShipName}" />
                    <GridViewColumn Header="Route" Width="200" DisplayMemberBinding="{Binding Route}" />
                    <GridViewColumn Header="Date" Width="100" DisplayMemberBinding="{Binding Date}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Правая панель -->
        <ContentControl x:Name="RightPanel"
                        Grid.Column="2"
                        Grid.Row="0"
                        Margin="10"/>

        <!-- Поиск -->
        <Grid Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Margin="10">
            <TextBox x:Name="PassengerSearchBox"
                     TextChanged="PassengerSearchBox_TextChanged"
                     VerticalContentAlignment="Center"
                     Padding="5"
                     Height="30"/>
            <TextBlock x:Name="Placeholder"
                       Text="Поиск пассажира..."
                       Foreground="Gray"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="Visible"
                       Panel.ZIndex="1"/>
        </Grid>

        <!-- Список пассажиров -->
        <ListView x:Name="PassengersList"
                  Grid.Column="0"
                  Grid.ColumnSpan="3"
                  Grid.Row="2"
                  Margin="10"
                  SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding FullName}" Width="200"/>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsAssigned}" Value="True">
                            <Setter Property="Background" Value="LightGreen"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Window>

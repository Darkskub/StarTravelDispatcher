<UserControl x:Class="StarTravelDispatcherApp.Views.StarMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10">
            <Button Content="Добавить систему" Click="AddSystem_Click" Margin="0 0 10 0"/>
            <Button Content="Удалить систему" Click="DeleteSystem_Click"/>
        </StackPanel>

        <ListBox x:Name="StarListBox"
                 DisplayMemberPath="Name"
                 SelectionMode="Single"
                 MouseDoubleClick="StarListBox_MouseDoubleClick"/>
    </DockPanel>
</UserControl>

<UserControl x:Class="StarTravelDispatcherApp.Views.AddToFlightControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <Button Content="Добавить на рейс" Click="AddToFlight_Click" Margin="0 0 10 0"/>
            <Button Content="Добавить пассажира" Click="AddPassenger_Click" Margin="0 0 10 0"/>
            <Button Content="Удалить пассажира" Click="DeletePassenger_Click"/>
        </StackPanel>

        <ListBox x:Name="PassengersList"
                 Grid.Row="1"
                 DisplayMemberPath="FullName"
                 SelectionMode="Extended"/>
    </Grid>
</UserControl>

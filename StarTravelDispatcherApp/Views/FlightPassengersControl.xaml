<UserControl x:Class="StarTravelDispatcherApp.Views.FlightPassengersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StarTravelDispatcherApp.Views">
    <Grid>
        <ListView x:Name="FlightPassengersList"
                  Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding FullName}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>

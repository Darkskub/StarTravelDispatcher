<Window x:Class="StarTravelDispatcherApp.Views.AddStarDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить звёздную систему" Height="250" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Название" />
        <TextBox x:Name="NameBox" Margin="0 0 0 10"/>

        <TextBlock Text="Координата X" />
        <TextBox x:Name="XBox" Margin="0 0 0 10"/>

        <TextBlock Text="Координата Y" />
        <TextBox x:Name="YBox" Margin="0 0 0 10"/>

        <Button Content="Добавить" Click="Add_Click" Width="100" HorizontalAlignment="Left"/>
    </StackPanel>
</Window>

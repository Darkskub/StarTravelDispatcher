<Window x:Class="StarTravelDispatcherApp.Views.AddPassengerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить пассажира" Height="180" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="ФИО пассажира" Margin="0 0 0 5"/>
        <TextBox x:Name="FullNameBox" Margin="0 0 0 10"/>

        <Button Content="Добавить" Click="Add_Click" Width="100" HorizontalAlignment="Left"/>
    </StackPanel>
</Window>
